@using WebNovel.Models.Dtos
@model List<StoryDto>
@{
    ViewData["Title"] = "Quản lý truyện";
}

<h2>Quản lý truyện</h2>

<form method="get" class="mb-3">
    <input name="keyword" value="@ViewBag.Keyword" placeholder="Tìm kiếm theo tên truyện..." />
    <button type="submit">Tìm</button>

</form>
<a href="/Admin/Story/Create" class="btn btn-primary">➕ Thêm truyện mới</a>

<table>
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Chương</th>
            <th>Số từ</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var story in Model)
        {
            <tr>
                <td>@story.Title</td>
                <td>@story.AuthorName</td>
                <td>@story.TotalChapters</td>
                <td>@story.TotalWords</td>
                <td>@story.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@story.Id">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@story.Id" method="post" style="display:inline">
                        <button type="submit" onclick="return confirm('Xoá truyện này?');">Xoá</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
